{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
    "elmType": "div",
    "children": [
        {
            "elmType": "a",
            "style": {
                "text-decoration": "none",
                "padding": "10px"
            },
            "attributes": {
                "target": "_blank",
                "href": "= 'https://outlook.office.com/owa/?path=/calendar/action/compose&subject=' + [$Title] + '&body=' + [$Description] + '&'+ '@currentField'",
                "class": "ms-fontColor-themePrimary ms-fontSize-28"
            },
            "children": [
                {
                    "elmType": "span",
                    "style": {
                        "padding-right": "10px"
                    },
                    "attributes": {
                        "iconName": "OutlookLogo"
                    }
                }
            ]
        }
    ]
}